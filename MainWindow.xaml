        <TextBox Margin="470,205,30,175" Width="200" Height="50" FontSize="30" Visibility="Visible" Name="n3"/>
        <TextBox Margin="240,205,260,175" Width="200" Height="50" FontSize="30" Visibility="Visible" Name="n2"/>
