        <Label Content="Сторона B" HorizontalAlignment="Left" Margin="298,180,0,0" VerticalAlignment="Top" Width="85" FontSize="15" Foreground="HotPink" Name="s2" Visibility="Visible"/>
        <Label Content="Сторона C" HorizontalAlignment="Left" Margin="534,180,0,0" VerticalAlignment="Top"  Width="85" FontSize="15" Foreground="HotPink" Name="s3" Visibility="Visible"/>
    </Grid>
</Window>
